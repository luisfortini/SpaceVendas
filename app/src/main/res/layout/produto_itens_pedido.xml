<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_itens_pedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/card_item"
    android:elevation="3dp"
    android:padding="8dp"
>

    <TextView
        android:id="@+id/pro_desc_item"
        style="@style/card_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PRODUTO AQUI SERA O PRODUTO " />

    <TextView
        android:id="@+id/unidade_item"
        style="@style/card_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pro_desc_item"
        tools:text="UN / 01" />

    <TextView
        android:id="@+id/pro_codigo_item"
        style="@style/card_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unidade_item"
        tools:text="CÃ³digo: 123456" />

    <TextView
        android:id="@+id/qtde_item"
        style="@style/card_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/pro_desc_item"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Qtde: 1200" />
    <TextView
        android:id="@+id/preco_unit"
        style="@style/card_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/qtde_item"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Vr.Unit: R$ 107,45" />

    <TextView
        android:id="@+id/valor_total_item"
        style="@style/card_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/preco_unit"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Vr.Total: R$ 105.364,34" />



</androidx.constraintlayout.widget.ConstraintLayout>