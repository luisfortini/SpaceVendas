<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItensPedidoFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv.itens_pedido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        tools:itemCount="15"
        tools:listitem="@layout/produto_itens_pedido" />

    <ProgressBar
        android:id="@+id/progress_itens_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/text_msg_itens_pedido"
        tools:text="Nenhum item adicionado ao pedido."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"/>
</FrameLayout>