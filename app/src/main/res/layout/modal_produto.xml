<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingHorizontal="16dp"
    android:paddingBottom="24dp"
    android:background="@drawable/card_item">

    <TextView
        android:id="@+id/desc_modal_produto"
        tools:text="DESCRIÇÃO DO PRODUTO AQUI"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinner_modal_produto"
        android:background="@drawable/edit_text"
        android:elevation="3dp"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/desc_modal_produto"
        app:layout_constraintBottom_toTopOf="@id/input_qtde"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/input_qtde"
        style="@style/edit_text"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text"
        android:hint="Quantidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_modal_produto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/input_preco"
        />

    <EditText
        android:id="@+id/input_preco"
        style="@style/edit_text"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:hint="Preco Venda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/input_qtde"
        app:layout_constraintTop_toBottomOf="@id/spinner_modal_produto" />


    <Button
        android:id="@+id/btn_save_produto"
        android:text="salvar"
        android:background="@drawable/button_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/input_preco"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>